<%- include("partials/header-purple") -%>

  <link rel="stylesheet" href="css/add-billboard.css">

  <section id="signup-page">

    <div class="wrapper fadeInDown">
      <div id="formContent">
        <!-- Tabs Titles -->

        <!-- Icon -->
        <div class="fadeIn first signup-icon">
          <img src="images/billboard.png" alt="">
        </div>

        <!-- Sign up Form -->
        <form class="" action="/admin/add-billboard" method="POST">
          <div class="signup-first-name">
            <input type="text" name="longitude" id="longitude" value="" placeholder="Longitude" class="fadeIn second" required>
          </div>
          <div class="signup-last-name">
            <input type="text" name="latitude" id="latitude" value="" placeholder="Latitude" class="fadeIn third" required>
          </div>
          <div class="signup-email">
            <input type="text" id="price" class="fadeIn fourth" name="price" placeholder="Price" required>
          </div>
          <div class="signup-password">
            <input type="text" id="length" class="fadeIn fifth" name="length" placeholder="Length in meters.." required>
          </div>
          <div class="signup-company">
            <input type="text" name="width" id="width" value="" placeholder="Width in meters.." class="fadeIn sixth" required>
          </div>
          <div class="signup-phone">
            <input type="text" name="state" id="state" value="" placeholder="Governorate" class="fadeIn seventh" required>
          </div>
          <div class="signup-address">
            <input type="text" name="address" id="address" value="" placeholder="Address" class="fadeIn eighth" required>
          </div>
          <div class="signup-address">
            <input type="text" name="id" id="id" value="" placeholder="ID" class="fadeIn ninth" required>
          </div>
          <input type="submit" class="fadeIn tenth" value="Add billboard">
        </form>

      </div>
    </div>

  </section>
